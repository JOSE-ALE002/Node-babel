<%- include("./templates/header.ejs", {title: "Pagina de edicion"}) %>
<div class="container w-50 mx-auto mt-4">
    <h1 class="py-4 text-center">Editar Tarea</h1>
    <form id="peetForm_edit" method="post">
        <div class="mb-3">
            <label class="form-label">Name Task</label>
            <input type="text" value="<%= task.title %>" name="title" class="form-control" id="title" placeholder="Task Title ">
        </div>
        <div class="mb-3">
            <label class="form-label">Description</label>
            <textarea id="description" name="description" cols="30" rows="10" placeholder="Task description "
                class="form-control"> <%= task.description %> </textarea>            
        </div>
        <button type="submit" class="btn btn-primary form-control">Save changes</button>
    </form>
</div>

<%- include("./templates/footer.ejs", {}) %>